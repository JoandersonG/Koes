<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayoutEditHomeScreenActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.EditHomeScreenActivity">

    <include
        android:id="@+id/include"
        layout="@layout/app_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSelectCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        android:text="@string/select_categories_show_home_screen"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayoutEditHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectCategories">

        <!--        <Button-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Breakfast"-->
        <!--            android:textColor="@color/colorPrimary"-->
        <!--            android:textSize="18sp"-->
        <!--            android:paddingHorizontal="24dp"-->
        <!--            android:paddingVertical="12dp"-->
        <!--            android:layout_marginEnd="8dp"-->
        <!--            android:layout_marginBottom="8dp"-->
        <!--            android:background="@drawable/category_activity_customized_chip" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/white_ripple_stroke_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Breakfast"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/primary_ripple_stroke_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Dinner"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/white_ripple_stroke_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Lunch"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/primary_ripple_stroke_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Snack"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </com.google.android.flexbox.FlexboxLayout>

    <Button
        android:id="@+id/btCancelEditHome"
        android:background="@drawable/white_ripple_stroke_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btSaveEditHome"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btSaveEditHome"
        android:background="@drawable/black_ripple_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:text="@string/save"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>