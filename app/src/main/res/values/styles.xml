<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="statusBarForeground">@color/black</item>
    </style>

    <style name="HomeActivityButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:padding">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdapterTitle">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CategoryChipStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/category_activity_customized_chip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>
